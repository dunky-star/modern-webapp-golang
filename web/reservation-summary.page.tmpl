{{template "base" .}}

{{define "content"}}
    {{$res := index .Data "reservation"}}

    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Reservation Summary</h1>

                <hr>

                <table class="table table-striped">
                    <thead></thead>
                    <tbody>
                    <tr>
                        <td>Name:</td>
                        <td>{{$res.FirstName}} {{$res.LastName}}</td>
                    </tr>
                    <tr>
                        <td>Arrival:</td>
                        <td>{{$res.StartDate.Format "2006-01-02"}}</td>
                    </tr>
                    <tr>
                        <td>Departure:</td>
                        <td>{{$res.EndDate.Format "2006-01-02"}}</td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td>{{$res.Email}}</td>
                    </tr>
                    <tr>
                        <td>Phone:</td>
                        <td>{{$res.Phone}}</td>
                    </tr>
                    </tbody>
                </table>

                <hr>
                <div class="text-center">
                    <a href="/make-reservation" class="btn btn-primary">Make Another Reservation</a>
                </div>

            </div>
        </div>
    </div>
{{end}}
