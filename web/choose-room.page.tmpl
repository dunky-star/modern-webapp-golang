{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-3">Choose Your Room</h1>
                
                {{$rooms := index .Data "rooms"}}

                {{if $rooms}}
                    <div class="row mt-4">
                        {{range $rooms}}
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{.RoomName}}</h5>
                                    <p class="card-text">Room ID: {{.Id}}</p>
                                    <a href="/choose-room?room_id={{.Id}}" class="btn btn-primary">Choose This Room</a>
                                </div>
                            </div>
                        </div>
                        {{end}}
                    </div>
                {{else}}
                    <div class="alert alert-warning mt-3">
                        <p>No rooms available for the selected dates.</p>
                        <a href="/search-availability" class="btn btn-secondary">Search Again</a>
                    </div>
                {{end}}
            </div>
        </div>
    </div>
{{end}}
