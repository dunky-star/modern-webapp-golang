{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-3">Choose Your Room</h1>
                
                {{$rooms := index .Data "rooms"}}

                {{if $rooms}}
                    <div class="row mt-4">
                        {{range $rooms}}
                        <div class="col-md-6 mb-4">
                            <div class="card shadow-sm h-100">
                                <div class="card-body d-flex flex-column">
                                    <div class="mb-3">
                                        <h5 class="card-title mb-2">{{.RoomName}}</h5>
                                    </div>
                                    <div class="mt-auto">
                                        <a href="/choose-room/{{.Id}}" class="btn btn-success btn-block">Choose This Room</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{end}}
                    </div>
                {{else}}
                    <div class="alert alert-warning mt-3">
                        <p>No rooms available for the selected dates.</p>
                        <a href="/search-availability" class="btn btn-secondary">Search Again</a>
                    </div>
                {{end}}
            </div>
        </div>
    </div>
{{end}}
